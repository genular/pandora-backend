# Default server configuration
#
server {
	listen 3010 default_server;
	listen [::]:3010 default_server;

	root /var/www/genular/pandora/compiled/web;

	server_name placeholder_frontend_url;

    index index.html;
    
    charset utf-8;

    location / {
            try_files $uri $uri/ =404;
    }

	location ~* \.(?:jpg|jpeg|gif|png|ico|cur|gz|svg|mp4|ogg|ogv|webm|htc)$ {
            expires max;
            log_not_found off;
    }

	# CSS and Javascript
	location ~* \.(?:css|js)$ {
	    add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate";
	    expires off;
	    access_log off;
	}

	access_log /var/log/nginx/dashboard.genular.localhost_access.log;
	error_log  /var/log/nginx/dashboard.genular.localhost_error.log warn;
}
