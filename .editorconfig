root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,R}]
charset = utf-8

[*.R]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[lib/**.js]
indent_style = space
indent_size = 4


[{package.json,config.yml}]
indent_style = space
indent_size = 4
